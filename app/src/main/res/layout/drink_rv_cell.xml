<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/global_spacing_20">

    <ImageView
        android:id="@+id/iv_drink"
        android:layout_width="@dimen/iv_size_100"
        android:layout_height="@dimen/iv_size_100"
        android:layout_marginStart="@dimen/global_spacing_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_drink_name"
        style="@style/default_text_style"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/global_spacing_21"
        app:layout_constraintBottom_toBottomOf="@+id/iv_drink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_drink"
        app:layout_constraintTop_toTopOf="@+id/iv_drink"
        tools:text="Milk / Float / Shake" />

</androidx.constraintlayout.widget.ConstraintLayout>
